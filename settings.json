{
  "workbench.colorTheme": "Default Dark+",
  "terminal.integrated.inheritEnv": false,
  "jupyter.askForKernelRestart": false,
  // From https://stackoverflow.com/a/70758108
  "workbench.colorCustomizations": {
    "terminal.ansiYellow": "#8400ffe1",
    "statusBar.background": "#8FBCBB",
    "statusBar.noFolderBackground": "#8FBCBB",
    "statusBar.debuggingBackground": "#8FBCBB",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E",
    // to higtlight current line border
    "editor.lineHighlightBorder": "#d45ccab0",
  },
  "editor.renderLineHighlight": "all",
  "notebook.output.textLineLimit": 1100,
  "python.analysis.completeFunctionParens": true,
  "autoDocstring.startOnNewLine": true,
  "autoDocstring.docstringFormat": "numpy",
  "editor.cursorStyle": "block",
  "[python]": {
    "editor.formatOnType": true
  },
  "window.zoomLevel": -1,
  "editor.fontSize": 14,
  "editor.fontFamily": "Menlo",
  "git.ignoreLegacyWarning": true,
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "sonarlint.focusOnNewCode": true,
  "update.mode": "manual",
  "editor.cursorSurroundingLines": 15,
  // with Go to Next/Previous Member extension
  "gotoNextPreviousMember.symbolKinds": [
    "function",
    "class",
    "method"
  ],
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "settingsSync.ignoredExtensions": [
    "ms-toolsai.jupyter"
  ],
  "editor.defaultFormatter": "charliermarsh.ruff",
  //VIM
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.cursorStylePerMode.insert": "line-thin",
  "vim.cursorStylePerMode.normal": "block",
  // Flah extension, have to use Cvim, waiting PR on official vim extension
  "vim.flash.enable": true,
  "vim.flash.marker.backgroundColor": "#ccff88",
  "vim.flash.marker.nextMatchBackgroundColor": "#ffb86c",
  "vim.flash.labels": "hklyuiopnmaqwertzxcvbasdgjf",
  //Vim color
  "vim.statusBarColorControl": false,
  "vim.statusBarColors.normal": [
    "#8FBCBB",
    "#434C5E"
  ],
  "vim.statusBarColors.insert": "#BF616A",
  "vim.statusBarColors.visual": "#B48EAD",
  "vim.statusBarColors.visualline": "#B48EAD",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",
  "vim.statusBarColors.surroundinputmode": "#007ACC",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "lineBreakInsert"
      ],
      "silent": true
    },
    {
      "before": [
        "<C-n>"
      ],
      "after": [],
      "commands": [
        {
          "command": ":nohl"
        }
      ]
    },
    // to disable copy when delete
    {
      "before": [
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    },
    {
      "before": [
        "D"
      ],
      "after": [
        "\"",
        "_",
        "D"
      ]
    },
    {
      "before": [
        "d",
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<BS>"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    },
    {
      "before": [
        "c"
      ],
      "after": [
        "\"",
        "_",
        "c"
      ]
    },
    {
      "before": [
        "C"
      ],
      "after": [
        "\"",
        "_",
        "C"
      ]
    },
    {
      "before": [
        "x"
      ],
      "after": [
        "\"",
        "_",
        "x"
      ]
    },
    {
      "before": [
        "s"
      ],
      "after": [
        "\"",
        "_",
        "s"
      ]
    },
    // test vim here
    // remaper "<C-w>" pour la gestion des switch windows sans passer par "<C-w>"
    {
      "before": [
        "<C-e>"
      ],
      "after": [
        "<C-w>"
      ]
    },
    // panes navigation
    {
      "before": [
        "<C-w>",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "<C-w>",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "<C-w>",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "before": [
        "<C-w>",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
    // to move screen down one line
    {
      "before": [
        "<C-h>"
      ],
      "after": [
        "<C-e>"
      ]
    }
  ],
  // to disable copy when delete
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    },
    {
      "before": [
        "D"
      ],
      "after": [
        "\"",
        "_",
        "D"
      ]
    },
    {
      "before": [
        "d",
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<BS>"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    },
    {
      "before": [
        "s"
      ],
      "after": [
        "\"",
        "_",
        "s"
      ]
    },
    // remaper "<C-w>" pour la gestion des switch windows sans passer par "<C-w>"
    {
      "before": [
        "<C-e>"
      ],
      "after": [
        "<C-w>"
      ]
    },
    // panes navigation
    {
      "before": [
        "<C-w>",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "<C-w>",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "<C-w>",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "before": [
        "<C-w>",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    // Move selected lines while staying in visual mode
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    // to pass to visual mode to insert more  easly
    {
      "before": [
        "i",
        "i"
      ],
      "after": [
        "<Esc>",
        "i"
      ]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-p>": false,
    "<C-j>": false,
    // "<C-d>": false,
    "<C-f>": false,
    "<C-w>": false,
    "<C-x>": false,
  },
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "editor.indentSize": "tabSize",
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],
  "editor.lineNumbers": "relative",
  "comments.useRelativeTime": false,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingBrackets": "never",
  "vim.showMarksInGutter": true,
  "notebook.lineNumbers": "on",
  "editor.formatOnSave": true,
  "editor.rename.enablePreview": false,
  "editor.parameterHints.enabled": false,
  "highlightOnCopy.backgroundColor": "rgba(230, 97, 89, 0.7)",
  // by default the foreground text color it's undefined, meaning the actual color won't be modified
  "highlightOnCopy.foregroundColor": "#fff",
  "highlightOnCopy.timeout": 200,
  "remote.SSH.remotePlatform": {
    "ag-AI40LeakDetect-vm": "linux",
    "detectleaks": "linux"
  },
  "notebook.defaultFormatter": "charliermarsh.ruff",
  "ruff.lineLength": 120,
  "workbench.editorLargeFileConfirmation": 200,
}